<div class="container">
  <div id="error_explanation">
    <% if @vendor.errors.any? %>
    <h2><%= pluralize(@vendor.errors.count, "error") %>
    prohibited this vendor from being saved:</h2>
    <ul>
      <% @vendor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class="row">
    <%= simple_form_for @vendor, html: { multipart: true, class: 'col s12' } do |f| %>
    <div class="input-field col s12">
    <%= f.input :name, input_html: { class: 'input-field col s12', placeholder: 'Name of the vendor' } %>
    </div>

    <h5>Contact Details</h5>
    <div class="input-field col s12">
      <%= f.input :contact_person %>
    </div>

    <div class="input-field col s12">
      <%= f.input :address, input_html: { class: 'materialize-textarea' } %> <br>
    </div>

    <div class="input-field col s12">
     <%= f.input :city %> <br>
    </div>

    <div class="input-field col s12">
      <%= f.input :pincode %> <br>
    </div>

    <div class="input-field col s12">
      <%= f.input :phone %>
    </div>

    <div class="input-field col s12">
      <%= f.input :email %>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%=  f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br><br><br>
      </div>
    </div>
   
    
    <%= f.submit "Submit", class: 'center-align btn waves-effect waves-light' %>
    <% end %>
  </div>
</div>