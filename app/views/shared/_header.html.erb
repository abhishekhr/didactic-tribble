<div class="aheader">
  <div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
      <div class="container">
        <br><br>
        <h1 class="header center white-text">Welcome Home</h1>
        <div class="row center">
          <h5 class="header white-text text-lighten-1 col s12 light"> Experience 200+ activities in more than 20 destinations</h5>
        </div>
        <nav class="deep-orange lighten-1">
          <div class="nav-wrapper">
            <form>
              <ul class="input-field">
                <form class="col s12">
                  <%= form_for :search, url: search_path, method: :get, class: "navbar-form navbar-right", role: "search" do |f| %>
                    <p>
                    <%= f.search_field :q, value: params[:q], placeholder: 'Search for activities, categories and destinations', class: "form-control", autofocus: true, autocomplete: 'off', onfocus: "this.value = this.value;" %>
                    </p>
                  <% end %>
                </form>
              </ul>
            </form>
          </div>
        </nav>  
        <br><br>
      </div>
    </div>
  </div>
</div>