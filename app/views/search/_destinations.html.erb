<div class="right">
	<% if @destinations.any? %>
	  <h5 class="center">Destinations</h5>
	  <h6><%= @destination_records.count %> <%=  "destination".pluralize(@destination_records.count) %> found</h6>
	  
	  <% @destinations.each do |destination| %>
	    <p class="center"><%=link_to destination.name, destination_path(destination) %></p> 
	  <% end %>

	<% end %>
</div>