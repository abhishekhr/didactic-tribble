<div class="container">
  <nav class="deep-orange lighten-2">
    <div class="nav-wrapper">
      <form>
        <ul class="input-field">
          <div class="col-12 large-searchbar">
            <%= form_for :search, url: search_path, method: :get, class: "navbar-form navbar-right", role: "search" do |f| %>
              <%= f.search_field :q, value: params[:q], placeholder: 'Search for activities, categories and destinations', autofocus: true, autocomplete: 'off', onfocus: "this.value = this.value;" %>
            <% end %>
          </div>
        </ul>
      </form>
    </div>
  </nav>
  <br><br><br>
<div class="row">
  <div class="col s12 m6 l8">
    <%= render 'activities' %>
  </div>
  <div class="col s12 m4 l1">
  </div>
  <div class="col s12 m4 l3 right">
    <div class="row">
      <div class="col s12">
        <%= render 'categories' %>
      </div>
      <div class="col s12">
        <%= render 'destinations' %>
      </div>
    </div>
  </div>
</div>
</div>