<div class="center">
  <% if @activities.any? %>
    <h4>Activities</h4>
    <h5><%= @activity_records.count %> <%=  "activity".pluralize(@activity_records.count) %> found</h5>  
  <% end %>
</div>
  
<div>
  <div class="row">
    <% @activities.each do |activity| %>
    <div class="col s12 m6 l6">
      <div class="card hoverable">
      
      <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag activity.cover.card.url %>
      </div>
      
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= link_to activity.title, activity_path(activity) %><i class="material-icons right">more_vert</i></span>
        <p><%= number_to_currency(activity.price, :unit => 'â‚¹ ') %></p>
        <p><%= link_to activity.destination.name, destination_path(activity.destination) %></p>
      </div>
      
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">
        <%= activity.title %><i class="material-icons right">close</i>
        </span>
        <p>
        <span class="grey-text text-darken-2">Destination: </span>
        <%= activity.destination.name if activity.destination %>
        </p>
        <p>
        <span class="grey-text text-darken-2">Category: </span>
        <%= activity.category.name if activity.category %>
        </p>
        <p>
        <span class="grey-text text-darken-2">Difficulty: </span>
        <%= activity.difficulty.humanize %>
        </p>
        <p>
          <%= activity.brief %>
        </p>
      </div>
      
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="center">
  <%= will_paginate @activity_records %>
</div>
